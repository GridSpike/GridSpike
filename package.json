{
  "name": "gridspike",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:client": "turbo dev --filter=@gridspike/client",
    "dev:server": "turbo dev --filter=@gridspike/server",
    "db:migrate": "pnpm --filter=@gridspike/server prisma migrate dev",
    "db:migrate:deploy": "pnpm --filter=@gridspike/server prisma migrate deploy",
    "db:generate": "pnpm --filter=@gridspike/server prisma generate",
    "db:studio": "pnpm --filter=@gridspike/server prisma studio",
    "railway:build": "pnpm install && pnpm db:generate && pnpm --filter=@gridspike/server build",
    "railway:start": "cd apps/server && node dist/main"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "pnpm": "^10.29.2"
  }
}
